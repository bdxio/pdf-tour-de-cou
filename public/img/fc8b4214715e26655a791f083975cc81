	<script type="text/javascript">
		$(document).ready(function(){
			$("#summary-cta").click(function() {
				$('html, body').animate({
					scrollTop: $("#expertise").offset().top
				}, 1000);
			});
			
			$("#expertise-cta").click(function() {
				$('html, body').animate({
					scrollTop: $("#portfolio").offset().top
				}, 1000);
			});
			
			$("#portfolio-cta").click(function() {
				$('html, body').animate({
					scrollTop: $("#references").offset().top
				}, 1000);
			});
			
			$("#references-cta").click(function() {
				$('html, body').animate({
					scrollTop: $("#blog").offset().top
				}, 1000);
			});
			
			$("#blog-cta").click(function() {
				$('html, body').animate({
					scrollTop: $("#contact").offset().top
				}, 1000);
			});
			
			/*$("#contact-cta").click(function() {
				$('html, body').animate({
					scrollTop: $("#references").offset().top
				}, 1000);
			});*/
			
			$("#back-to-up").click(function() {
				$('html, body').animate({
					scrollTop: 0
				}, 1000);
			});
		});
	</script>
